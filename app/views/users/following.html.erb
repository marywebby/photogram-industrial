<div class="row">
  <div class="col md-6">
    <h1>
      <%= @user.username %>
    </h1>

    <ul class="nav nav-pills nav-justified">
      <li class="nav-item">
        <%= link_to "Posts", user_path(@user.username), class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Liked photos", liked_path(@user.username), class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "Feed", feed_path(@user.username), class: "nav-link" %>
      </li>
      <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#followersModal">
          Followers
        </button>
      <li class="nav-item">
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#followingModal">
          Following
        </button>
      </li>
    </ul>
  </div>
</div>

<div class="modal fade" id="followingModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Following</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <% @user.followers.each do |follower| %>
          <ul>
            <li>
              <%= link_to follower.username, following_path(follower.username), class: "nav-link" %>
            </li>
          </ul>
        <% end %>
      </ul>
    </div>
  </div>
</div>
</div>


<div class="modal fade" id="followersModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Following</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <% @user.leaders.each do |leader| %>
          <ul>
            <li>
              <%= link_to leader.username, user_path(leader.username), class: "nav-link" %>
            </li>
          </ul>
        <% end %>
      </ul>
    </div>
  </div>
</div>
</div>
